<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingTop="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewProfileActor"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageViewProfile"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textNameActor"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewProfileActor"
        app:layout_constraintStart_toStartOf="@+id/imageViewProfileActor"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfileActor" />
</androidx.constraintlayout.widget.ConstraintLayout>